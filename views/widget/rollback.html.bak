<div class="row">
    <div class="col-md-12">
        <ul class="nav nav-tabs">
            <li ng-class="{active:data.tabSwitch==0}" ng-init="data.tabSwitch=0" ng-click="data.tabSwitch=0">
                <a href="javascript:void(0);" aria-expanded="true">
                    <i class="fa fa-home"></i> 立即回滚
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade app-detail" ng-class="{'active in':data.tabSwitch==0}">
                <div class="form-group">
                    <label class="form-label">应用名称：</label>
                    <span class="desc"></span>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="param.appName" ng-init="param.appName=originalData.deploy.metadata.name">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">回滚镜像：</label>
                    <span class="desc"></span>
                    <div class="controls">
                        <span class="form-control" ng-click="$emit('showImageSelector', 'rollback')">{{param.image}}</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">回滚原因：</label>
                    <span class="desc"></span>
                    <div class="controls">
                        <input type="text" class="form-control" ng-model="param.comments" ng-init="param.comments=''">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xs-12 btnBar">
        <button class="btn btn-primary" type="button" ng-click="$emit('submitRollback',param)">提交</button>
        <button class="btn btn-primary" type="button" ng-click="$emit('closeWidget','widgetRollback')">取消</button>
    </div>
</div>
